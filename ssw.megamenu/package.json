    "format:scripts": "prettier ./lib --write",
    "format:styles": "stylelint ./lib/**/*.css --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
