    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "rollup-plugin-node-externals": "^7.0.1",
    "source-map-explorer": "^2.5.3",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-dts": "^3.7.3",
    "vite-plugin-svgr": "^4.2.0",
    "vitest": "^1.0.4"
